{
    "compilerOptions": {
        "module": "ESNext", // Use "ESNext" if using ESModules
        "target": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "esm": true // Required for ts-node to handle .ts as ES modules
    }
}